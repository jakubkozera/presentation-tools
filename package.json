{
  "name": "presentation-snapshots",
  "displayName": "Presentation Snapshots",
  "description": "Save and restore code snapshots and highlights for smooth presentations",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:presentationSnapshots.saveSnapshot",
    "onCommand:presentationSnapshots.loadSnapshot",
    "onCommand:presentationSnapshots.deleteSnapshot",
    "onCommand:presentationSnapshots.exportSnapshots",
    "onCommand:presentationSnapshots.importSnapshots",
    "onCommand:presentationSnapshots.adjustTypingSpeed",
    "onCommand:presentationSnapshots.showSnapshotDiff",
    "onCommand:presentationSnapshots.deleteAllSnapshots",
    "onCommand:presentationSnapshots.changeSnapshotGroup",
    "onCommand:presentationSnapshots.deleteGroup",
    "onCommand:presentationSnapshots.showGroupDiff",
    "onCommand:presentationSnapshots.loadGroupWithTypingEffect",
    "onCommand:presentationHighlights.saveHighlight",
    "onCommand:presentationHighlights.applyHighlight",
    "onCommand:presentationHighlights.clearHighlights",
    "onCommand:presentationHighlights.deleteHighlight",
    "onCommand:presentationHighlights.deleteAllHighlights",
    "onCommand:presentationHighlights.exportHighlights",
    "onCommand:presentationHighlights.importHighlights",
    "onCommand:presentationHighlights.changeHighlightGroup",
    "onCommand:presentationHighlights.deleteGroup",
    "onCommand:presentationHighlights.applyGroupHighlights"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Presentation Snapshots",
      "properties": {
        "presentationSnapshots.typingSpeed": {
          "type": "number",
          "default": 10,
          "description": "Typing speed in characters per second"
        },
        "presentationHighlights.defaultHighlightColor": {
          "type": "string",
          "default": "rgba(255, 255, 0, 0.3)",
          "description": "Default color for code highlights (CSS color format)"
        }
      }
    },
    "commands": [
      {
        "command": "presentationSnapshots.saveSnapshot",
        "title": "Presentation: Save Code Snapshot"
      },
      {
        "command": "presentationSnapshots.loadSnapshot",
        "title": "Load Snapshot",
        "icon": "$(play)"
      },
      {
        "command": "presentationSnapshots.deleteSnapshot",
        "title": "Delete Snapshot",
        "icon": "$(x)"
      },
      {
        "command": "presentationSnapshots.showSnapshotDiff",
        "title": "Show Diff",
        "icon": "$(diff)"
      },
      {
        "command": "presentationSnapshots.exportSnapshots",
        "title": "Export All Snapshots",
        "icon": "$(repo-push)"
      },
      {
        "command": "presentationSnapshots.importSnapshots",
        "title": "Import Snapshots",
        "icon": "$(repo-pull)"
      },
      {
        "command": "presentationSnapshots.adjustTypingSpeed",
        "title": "Adjust Typing Speed",
        "icon": "$(run-all)"
      },
      {
        "command": "presentationSnapshots.deleteAllSnapshots",
        "title": "Delete All Snapshots",
        "icon": "$(trash)"
      },
      {
        "command": "presentationSnapshots.changeSnapshotGroup",
        "title": "Move to Group",
        "icon": "$(folder)"
      },
      {
        "command": "presentationSnapshots.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "presentationSnapshots.showGroupDiff",
        "title": "Show Group Diff",
        "icon": "$(diff)"
      },
      {
        "command": "presentationSnapshots.loadGroupWithTypingEffect",
        "title": "Run Group Presentation",
        "icon": "$(play)"
      },
      {
        "command": "presentationHighlights.saveHighlight",
        "title": "Presentation: Save Code Highlight"
      },
      {
        "command": "presentationHighlights.applyHighlight",
        "title": "Apply Highlight",
        "icon": "$(paintbrush)"
      },
      {
        "command": "presentationHighlights.clearHighlights",
        "title": "Clear All Highlights",
        "icon": "$(clear-all)"
      },
      {
        "command": "presentationHighlights.deleteHighlight",
        "title": "Delete Highlight",
        "icon": "$(x)"
      },
      {
        "command": "presentationHighlights.exportHighlights",
        "title": "Export All Highlights",
        "icon": "$(repo-push)"
      },
      {
        "command": "presentationHighlights.importHighlights",
        "title": "Import Highlights",
        "icon": "$(repo-pull)"
      },
      {
        "command": "presentationHighlights.deleteAllHighlights",
        "title": "Delete All Highlights",
        "icon": "$(trash)"
      },
      {
        "command": "presentationHighlights.changeHighlightGroup",
        "title": "Move to Group",
        "icon": "$(folder)"
      },
      {
        "command": "presentationHighlights.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "presentationHighlights.applyGroupHighlights",
        "title": "Apply Group Highlights",
        "icon": "$(paintbrush)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "presentationSnapshotsView",
          "name": "Presentation Snapshots"
        },
        {
          "id": "presentationHighlightsView",
          "name": "Presentation Highlights"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "presentationSnapshots.showSnapshotDiff",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@1"
        },
        {
          "command": "presentationSnapshots.loadSnapshot",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@2"
        },
        {
          "command": "presentationSnapshots.deleteSnapshot",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@3"
        },
        {
          "command": "presentationSnapshots.changeSnapshotGroup",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "1_modification@1"
        },
        {
          "command": "presentationSnapshots.showGroupDiff",
          "when": "view == presentationSnapshotsView && viewItem == snapshotGroup",
          "group": "inline@1"
        },
        {
          "command": "presentationSnapshots.loadGroupWithTypingEffect",
          "when": "view == presentationSnapshotsView && viewItem == snapshotGroup",
          "group": "inline@2"
        },
        {
          "command": "presentationSnapshots.deleteGroup",
          "when": "view == presentationSnapshotsView && viewItem == snapshotGroup",
          "group": "inline@3"
        },
        {
          "command": "presentationHighlights.applyHighlight",
          "when": "view == presentationHighlightsView && viewItem == highlight",
          "group": "inline@1"
        },
        {
          "command": "presentationHighlights.deleteHighlight",
          "when": "view == presentationHighlightsView && viewItem == highlight",
          "group": "inline@2"
        },
        {
          "command": "presentationHighlights.changeHighlightGroup",
          "when": "view == presentationHighlightsView && viewItem == highlight",
          "group": "1_modification@1"
        },
        {
          "command": "presentationHighlights.applyGroupHighlights",
          "when": "view == presentationHighlightsView && viewItem == highlightGroup",
          "group": "inline@1"
        },
        {
          "command": "presentationHighlights.deleteGroup",
          "when": "view == presentationHighlightsView && viewItem == highlightGroup",
          "group": "inline@2"
        }
      ],
      "view/title": [
        {
          "command": "presentationSnapshots.exportSnapshots",
          "when": "view == presentationSnapshotsView",
          "group": "navigation@1"
        },
        {
          "command": "presentationSnapshots.importSnapshots",
          "when": "view == presentationSnapshotsView",
          "group": "navigation@2"
        },
        {
          "command": "presentationSnapshots.adjustTypingSpeed",
          "when": "view == presentationSnapshotsView",
          "group": "navigation@3"
        },
        {
          "command": "presentationSnapshots.deleteAllSnapshots",
          "when": "view == presentationSnapshotsView && presentationSnapshotsHasSnapshots",
          "group": "navigation@4"
        },
        {
          "command": "presentationHighlights.exportHighlights",
          "when": "view == presentationHighlightsView",
          "group": "navigation@1"
        },
        {
          "command": "presentationHighlights.importHighlights",
          "when": "view == presentationHighlightsView",
          "group": "navigation@2"
        },
        {
          "command": "presentationHighlights.clearHighlights",
          "when": "view == presentationHighlightsView",
          "group": "navigation@3"
        },
        {
          "command": "presentationHighlights.deleteAllHighlights",
          "when": "view == presentationHighlightsView && presentationHighlightsHasHighlights",
          "group": "navigation@4"
        }
      ],
      "editor/context": [
        {
          "command": "presentationSnapshots.saveSnapshot",
          "group": "presentation@1",
          "when": "editorTextFocus"
        },
        {
          "command": "presentationHighlights.saveHighlight",
          "group": "presentation@2",
          "when": "editorHasSelection && editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "presentationSnapshots.saveSnapshot",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "presentationHighlights.saveHighlight",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorHasSelection && editorTextFocus"
      },
      {
        "command": "presentationHighlights.clearHighlights",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.3",
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}