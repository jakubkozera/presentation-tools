{
  "name": "presentation-snapshots",
  "displayName": "Presentation Snapshots",
  "description": "Save and restore code snapshots for smooth presentations with diff-based typewriter effect",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:presentationSnapshots.saveSnapshot",
    "onCommand:presentationSnapshots.loadSnapshot",
    "onCommand:presentationSnapshots.deleteSnapshot",
    "onCommand:presentationSnapshots.exportSnapshots",
    "onCommand:presentationSnapshots.importSnapshots",
    "onCommand:presentationSnapshots.adjustTypingSpeed",
    "onCommand:presentationSnapshots.showSnapshotDiff",
    "onCommand:presentationSnapshots.deleteAllSnapshots"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Presentation Snapshots",
      "properties": {
        "presentationSnapshots.useTypingMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable typewriter effect when loading snapshots"
        },
        "presentationSnapshots.typingSpeed": {
          "type": "number",
          "default": 10,
          "description": "Typing speed in characters per second"
        }
      }
    },
    "commands": [
      {
        "command": "presentationSnapshots.saveSnapshot",
        "title": "Presentation: Save Code Snapshot"
      },
      {
        "command": "presentationSnapshots.loadSnapshot",
        "title": "Load Snapshot",
        "icon": "$(play)"
      },
      {
        "command": "presentationSnapshots.deleteSnapshot",
        "title": "Delete Snapshot",
        "icon": "$(x)"
      },
      {
        "command": "presentationSnapshots.showSnapshotDiff",
        "title": "Show Diff",
        "icon": "$(diff)"
      },
      {
        "command": "presentationSnapshots.exportSnapshots",
        "title": "Export All Snapshots",
        "icon": "$(repo-push)"
      },
      {
        "command": "presentationSnapshots.importSnapshots",
        "title": "Import Snapshots",
        "icon": "$(repo-pull)"
      },
      {
        "command": "presentationSnapshots.adjustTypingSpeed",
        "title": "Adjust Typing Speed",
        "icon": "$(run-all)"
      },
      {
        "command": "presentationSnapshots.deleteAllSnapshots",
        "title": "Delete All Snapshots",
        "icon": "$(trash)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "presentationSnapshotsView",
          "name": "Presentation Snapshots"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "presentationSnapshots.showSnapshotDiff",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@1"
        },
        {
          "command": "presentationSnapshots.loadSnapshot",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@2"
        },
        {
          "command": "presentationSnapshots.deleteSnapshot",
          "when": "view == presentationSnapshotsView && viewItem == snapshot",
          "group": "inline@3"
        }
      ],
      "view/title": [
        {
          "command": "presentationSnapshots.exportSnapshots",
          "when": "view == presentationSnapshotsView",
          "group": "navigation@1"
        },
        {
          "command": "presentationSnapshots.importSnapshots",
          "when": "view == presentationSnapshotsView",
          "group": "navigation@2"
        },
        {
          "command": "presentationSnapshots.adjustTypingSpeed",
          "when": "view == presentationSnapshotsView && config.presentationSnapshots.useTypingMode",
          "group": "navigation@3"
        },
        {
          "command": "presentationSnapshots.deleteAllSnapshots",
          "when": "view == presentationSnapshotsView && presentationSnapshotsHasSnapshots",
          "group": "navigation@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "presentationSnapshots.saveSnapshot",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.3",
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}